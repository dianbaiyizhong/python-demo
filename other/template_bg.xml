<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="######" />
        </shape>
    </item>


    <item
        android:width="20dp"
        android:gravity="left">
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="######"
                android:startColor="#313131" />
        </shape>
    </item>


    <item
        android:width="20dp"
        android:gravity="right"
        android:right="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerColor="######"
                android:endColor="#313131" />
        </shape>
    </item>
</layer-list>